<template>
	<div>
		<el-breadcrumb separator-class="el-icon-arrow-right">
		  <el-breadcrumb-item :to="{ path: '/' }">主页</el-breadcrumb-item>
		  <el-breadcrumb-item>基础设置</el-breadcrumb-item>
		  <el-breadcrumb-item>平台基础设置</el-breadcrumb-item>
		</el-breadcrumb>
			<el-form :inline="true" :model="formInline">
			  <el-form-item label="公告标题：">
			    <el-input v-model.trim="formInline.noticeTitle" size="small"></el-input>
			  </el-form-item>
			  <el-form-item label="创建时间：">
			  	 <el-col :span="11">
			      <el-date-picker type="datetime" value-format="yyyy-MM-dd" v-model.trim="formInline.createTimeStart" placeholder="选择日期" style="width: 100%;"></el-date-picker>
			    </el-col>
			    <el-col class="line" :span="2">至</el-col>
			    <el-col :span="11">
			      <el-date-picker type="datetime" value-format="yyyy-MM-dd" v-model.trim="formInline.createTimeEnd" placeholder="选择日期" style="width: 100%;"></el-date-picker>
			    </el-col>
			  </el-form-item>	
			  <el-form-item>
			    <el-button type="primary"  @click="handleSubmit" size="small">查询</el-button>
			    <el-button @click="handleReset" size="small">重置</el-button>
			  </el-form-item>
			</el-form>
			<el-container>
	        	<router-link :to="{path:'/content/noticeInfo/add'}" >
	        		<el-button type="danger" size="small">新增</el-button> 
	        	</router-link> 
	        </el-container>
			<el-table :data="tableData" border>
			    <el-table-column prop="" label="操作" width="200">		    	
			    	<template slot-scope="scope">
			    		<div class="alignCenter">
			    			<router-link :to="{path:'/content/noticeInfo/see',query:{noticeId:scope.row.noticeId}}">
			    			<el-button type="primary" size="mini">查看</el-button>
				    		</router-link>	
				    		<router-link :to="{path:'/content/noticeInfo/editor',query:{noticeId:scope.row.noticeId}}">
				    			<el-button type="primary" size="mini">处理</el-button>
				    		</router-link>	
				    		<el-button v-if="scope.row.status == 1" size="mini" @click="withdraw(scope.row.noticeId)">撤回</el-button>
			    		</div>
				     </template>
			    </el-table-column>
			    <el-table-column prop="noticeTitle" label="品类"></el-table-column>
			    <el-table-column prop="createTime" label="创建时间"></el-table-column>
			    <el-table-column prop="createAdminId" label="创建人"></el-table-column>
			    <div slot="empty">
					<img src="../../../../../assets/images/no-message.png" alt="">
			    </div>
			</el-table>
			<el-footer style="height:auto;">
				<el-pagination
			      @size-change="handleSizeChange"
			      @current-change="handleCurrentChange"
			      :current-page="currentPage"
			      :page-sizes="[10, 20, 30, 40]"
			      :page-size="formInline.pageSize"
			      layout="total, sizes, prev, pager, next, jumper"
			      :total="total">
			    </el-pagination>
			</el-footer>
		
	</div>
</template>
<script>
	export default {
		data(){
			return {
				formInline: {
		          noticeTitle: '',
		          createTimeStart:'',
		          createTimeEnd:'',
				  toPage: 1,
		          pageSize: 10,
		        },
		        industryCodeOptions:[],
		        currentPage: 1,
		        total:11,
		        time:"",
		        tableData: []
			}
		},
		created(){
			this.dataSubmit();
		},
	    methods: {
	      handleSubmit() {
	        this.dataSubmit();
	      },
	      handleReset(){
	      	this.formInline = {
	          noticeTitle: '',
	          createTimeStart:'',
	          createTimeEnd:'',
			  toPage: 1,
	          pageSize: 10,
	        };
	      },
		  handleSizeChange(val) {
		        this.pageSize = val;
		        this.dataSubmit();
		   },
		  handleCurrentChange(val) {
		        this.formInline.toPage = val;
		        this.dataSubmit();
		   },
		   dataSubmit(){
		   		console.log(this.formInline)
		   		this.$http.post('/v1/admin/basics/notices',this.formInline).then(res=>{
		   			console.log(res)
		   			let data = res.data;
		   			this.total = data.result.total;
					this.tableData = data.result.list;
					this.currentPage = data.result.pageNum;
		   		});
		   },
		   withdraw(noticeId){
			   	this.$confirm('确认撤回?', '消息提示', {
		          confirmButtonText: '确定',
		          cancelButtonText: '取消',
		          type: 'warning'
		        }).then(() => {
		        	this.$http.delete('/v1/admin/basics/notice/'+noticeId).then(res=>{
			   	 		console.log(res.data);
			   	 		if(res.data.status == 200){
			   	 			this.$message({
					            type: 'success',
					            message: '撤回成功!'
					        });
					        this.dataSubmit();
			   	 		}
			   	 	});
		        }).catch(() => {
		          this.$message({
		            type: 'info',
		            message: '已取消撤回'
		          });          
		        });
		   }
	    }

	}
</script>
